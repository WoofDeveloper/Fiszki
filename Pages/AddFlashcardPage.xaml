<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pagemodels="clr-namespace:Fiszki.PageModels"
             x:Class="Fiszki.Pages.AddFlashcardPage"
             x:DataType="pagemodels:AddFlashcardPageModel"
             Title="{Binding PageTitle}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="{Binding PageTitle}"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Frame BorderColor="LightGray" 
                   CornerRadius="10" 
                   Padding="15">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Slowo angielskie *"
                           FontAttributes="Bold"
                           TextColor="#2196F3"/>
                    <Entry Text="{Binding EnglishWord}"
                           Placeholder="Wpisz slowo po angielsku"
                           FontSize="18"/>

                    <Label Text="Tlumaczenie polskie *"
                           FontAttributes="Bold"
                           TextColor="#2196F3"
                           Margin="0,10,0,0"/>
                    <Entry Text="{Binding PolishTranslation}"
                           Placeholder="Wpisz tlumaczenie"
                           FontSize="18"/>

                    <Label Text="Kategoria"
                           FontAttributes="Bold"
                           TextColor="Gray"
                           Margin="0,10,0,0"/>
                    <Picker ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory}"
                            ItemDisplayBinding="{Binding Title}"
                            Title="Wybierz kategorie"/>
                    <Label Text="Przyklad (opcjonalnie)"
                           FontAttributes="Bold"
                           TextColor="Gray"
                           Margin="0,10,0,0"/>
                    <Editor Text="{Binding Example}"
                            Placeholder="Wpisz przykladowe zdanie"
                            HeightRequest="80"
                            FontSize="14"/>

                </VerticalStackLayout>
            </Frame>

            <Label Text="* pola wymagane"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Anuluj"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"/>

                <Button Grid.Column="1"
                        Text="Zapisz"
                        Command="{Binding SaveFlashcardCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
