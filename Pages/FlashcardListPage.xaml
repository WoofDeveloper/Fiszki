<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Fiszki.Models"
             xmlns:pagemodels="clr-namespace:Fiszki.PageModels"
             x:Class="Fiszki.Pages.FlashcardListPage"
             x:DataType="pagemodels:FlashcardListPageModel"
             Title="Moje Fiszki">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="16">

        <Label Text="Fiszki Angielskie"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
            <SearchBar Grid.Column="0"
                       Placeholder="Szukaj..."
                       Text="{Binding SearchText}"
                       Margin="0,0,10,0"/>

            <Label Grid.Column="1"
                   Text="{Binding TotalCount, StringFormat='Razem: {0}'}"
                   VerticalOptions="Center"
                   FontSize="14"
                   TextColor="Gray"/>
        </Grid>

        <Picker Grid.Row="2" 
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory}"
                ItemDisplayBinding="{Binding Title}"
                Title="Filtruj po kategorii"
                Margin="0,0,0,10"/>

        <CollectionView Grid.Row="3"
                       ItemsSource="{Binding Flashcards}"
                       SelectionMode="None">
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="Brak fiszek"
                           FontSize="20"
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                    <Label Text="Dodaj pierwsza fiszke!"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Gray"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Flashcard">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Usun"
                                          BackgroundColor="Red"
                                          Command="{Binding Source={RelativeSource AncestorType={x:Type pagemodels:FlashcardListPageModel}}, Path=DeleteFlashcardCommand}"
                                          CommandParameter="{Binding .}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="0,5" 
                               Padding="15"
                               BorderColor="{Binding NeedsReview, Converter={StaticResource BoolToColorConverter}}"
                               CornerRadius="10"
                               HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type pagemodels:FlashcardListPageModel}}, Path=EditFlashcardCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0" 
                                       Grid.Column="0"
                                       Text="{Binding EnglishWord}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#2196F3"/>

                                <Label Grid.Row="1" 
                                       Grid.Column="0"
                                       Text="{Binding PolishTranslation}"
                                       FontSize="16"
                                       TextColor="Gray"
                                       Margin="0,5,0,0"/>

                                <Label Grid.Row="2" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Example}"
                                       FontSize="12"
                                       FontAttributes="Italic"
                                       TextColor="DarkGray"
                                       Margin="0,5,0,0"
                                       IsVisible="{Binding Example, Converter={StaticResource IsNotNullConverter}}"/>

                                <HorizontalStackLayout Grid.Row="3" 
                                                      Grid.Column="0"
                                                      Grid.ColumnSpan="2"
                                                      Spacing="15"
                                                      Margin="0,10,0,0">
                                    <Label Text="{Binding TimesReviewed, StringFormat='Powtorzenia: {0}'}"
                                           FontSize="11"
                                           TextColor="Gray"/>
                                    <Label Text="{Binding SuccessRate, StringFormat='Skutecznosc: {0:F0}%'}"
                                           FontSize="11"
                                           TextColor="Green"/>
                                    <Label Text="🔄 Do powtorki"
                                           FontSize="11"
                                           FontAttributes="Bold"
                                           TextColor="#FF5722"
                                           IsVisible="{Binding NeedsReview}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="4" RowDefinitions="Auto,Auto,Auto" RowSpacing="10" Margin="0,10,0,0">
            <Grid Grid.Row="0" ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="Dodaj fiszke"
                        Command="{Binding AddFlashcardCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"/>

                <Button Grid.Column="1"
                        Text="Zacznij nauke"
                        Command="{Binding StartLearningCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"/>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="Import z JSON"
                        Command="{Binding ImportFlashcardsCommand}"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"/>

                <Button Grid.Column="1"
                        Text="Statystyki"
                        Command="{Binding ViewStatisticsCommand}"
                        BackgroundColor="#9C27B0"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"/>
            </Grid>
        </Grid>

        <ActivityIndicator Grid.Row="0" 
                          Grid.RowSpan="4"
                          IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          Color="#2196F3"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
